@using Classroom.Models
@model Subject

@{
    ViewBag.Title = "EditMarks";
}

<h2>EditMarks</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   @*@(Model.StudentId=ViewBag.sId)*@
    <div class="form-horizontal">
        <h4>Subjects</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Student.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student.Id)
                @Html.ValidationMessageFor(model => model.Student.Id)
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mark)
                    @Html.ValidationMessageFor(model => model.Mark)
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
