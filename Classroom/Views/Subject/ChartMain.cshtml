
@if (ViewBag.dataFlag || !ViewBag.hasMarks)
{
    <h2>
        No student subject data, @Html.ActionLink("Create some...", "Class", "Student")
    </h2>
}
else
{

    <h2>Class Overview</h2>

    <br />
    <style>
        img {
            border: 2px solid #9da1a8;
        }
    </style>

    var url = @Url.Action("Chart", "Subject");

    <div align="center">
        <img src=@url />
    </div>
}

