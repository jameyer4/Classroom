@model Classroom.Models.DB_Models.Subject

@{
    ViewBag.Title = "AssignSubjects";
}

<h2>Assign Subjects</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Assign subject to current user</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)*@
                @* Subject dropdown menu *@
                <select id="SubjectDropdown" name="sDropdown">
                    <option value = "English">English</option>
                    <option value = "Afrikaans">Afrikaans</option>
                    <option value = "Math">Math</option>
                    <option value = "Geography">Geography</option>
                    <option value = "History">History</option>
                    <option value = "Life Orientation">Life Orientation</option>
                    <option value = "Natural Science">Natural Science</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign to me" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index") 
</div>
